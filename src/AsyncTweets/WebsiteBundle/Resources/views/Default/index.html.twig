{% extends 'AsyncTweetsWebsiteBundle::layout.html.twig' %}

{% block title %}Home timeline{% endblock %}

{% block content %}
    <div class="count">
        {{ pagination.getTotalItemCount }} tweets
    </div>
    
    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
    
    <div class="tweets">
        {% for tweet in pagination %}
            {% include 'AsyncTweetsWebsiteBundle:Default:tweet_inc.html.twig' %}
        {% endfor %}
    </div>
    
    <p id="under_tweets"></p>
    
    {# display navigation #}
    <div class="navigation row">
        <div class="col-md-6 col-sm-12">
            {{ knp_pagination_render(pagination) }}
        </div>
        <div class="col-md-6 col-sm-12 alert alert-info" role="alert">
            Press <kbd>←</kbd> and <kbd>→</kbd> to go to previous or next page.
        </div>
    </div>
{% endblock %}
